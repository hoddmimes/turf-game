<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="turf" status="Trace">
  <Appenders>
  	<File name="FILE"  fileName="./turf-game.log">
			<PatternLayout>
					<Pattern>%d %p %C{1} [%F %t %L] %m %ex%n</Pattern>
			</PatternLayout>
  	</File>
    <Console name="STDOUT" target="SYSTEM_OUT">
      		<PatternLayout>
      		 	<Pattern>%d{HH:mm:ss.SSS} %C{1} %-5level  - %msg%n</Pattern>
      		</PatternLayout>
    </Console>
  </Appenders>


	<Loggers>
		<logger name="com.hoddmimes.turf.server.services.dayranking" level="DEBUG" additivity="false">
			<AppenderRef ref="STDOUT"/>
			<AppenderRef ref="FILE"/>
		</logger>

		<Root level="ERROR">
			<AppenderRef ref="STDOUT"/>
		</Root>

	</Loggers>
</Configuration>
